<%= form_with(model: [restaurant, table]) do |form| %>
  <% if table.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h2>
      <ul>
        <% table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Other table fields here -->
  <div>
    <%= form.label :table_name, style: "display: block" %>
    <%= form.text_field :table_name %>
  </div>

  <div>
    <%= form.label :seat_number, style: "display: block" %>
    <%= form.text_field :seat_number %>
  </div>

  <div>
    <%= form.label :is_available, style: "display: block" %>
    <%= form.check_box :is_available %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

