<%= form_with(model: reservation) do |form| %>
  <% if reservation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :reservation_name, style: "display: block" %>
    <%= form.text_field :reservation_name %>
  </div>

  <div>
    <%= form.label :reservation_date, style: "display: block" %>
    <%= form.datetime_field :reservation_date %>
  </div>

  <div>
    <%= form.label :is_active, style: "display: block" %>
    <%= form.check_box :is_active %>
  </div>

  <!-- Restaurant selection dropdown -->
  <div>
    <%= form.label :restaurant_id, 'Restaurant', style: "display: block" %>
    <%= form.collection_select :restaurant_id, Restaurant.all, :restaurant_name, :restaurant_name, { prompt: 'Select a Restaurant' }, { class: 'restaurant-select' } %>
  </div>

  <!-- Table selection dropdown -->
  <div class="table-dropdown">
    <%= form.label :table_id, 'Table', style: "display: block" %>
    <%= form.collection_select :table_id, [], :id, :table_name, { prompt: 'Select a Table' }, { class: 'table-select' } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>