<!-- app/views/restaurants/my_restaurants.html.erb -->
<h1>My Restaurants</h1>

<% if @restaurants.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Restaurant Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Contact Number</th>
          <th>Details</th>
          <th>Add Table</th>
          <th>Delete Restaurant</th>
          
          <!-- Add more table headers as needed -->
        </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.restaurant_name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.email %></td>
            <td><%= restaurant.contact_number %></td>
            <td> <%= link_to "Show", restaurant %> </td>
            <td><%= link_to "Add Table", new_restaurant_table_path(restaurant), class: "btn btn-primary" %></td>
            <td><%= button_to "Delete", @restaurant, form_method: :delete, data: { confirm: "Are you sure?" } %></td>

            <!-- Add more table cells for additional restaurant details -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No restaurants found.</p>
<% end %>

